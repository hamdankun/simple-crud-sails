<h1>User Index</h1>
<a href="<%= sails.getBaseUrl()+'/create' %>">Add User</a>
<table border="1">
  <thead>
    <tr>
      <th>Email</th>
      <th>Username</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(function(user)  { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><a href="<%= sails.getBaseUrl()+'/'+user.id+'/edit' %>">Edit</a>
          <a onclick="return confirm('are you sure ?')" href="<%= sails.getBaseUrl()+'/delete/'+user.id %>">Delete</a></td>
        </tr>
    <% }); %>
  </tbody>
</table>
